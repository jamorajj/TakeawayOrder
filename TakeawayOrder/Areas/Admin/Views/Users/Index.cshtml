@model List<UserWithRoleViewModel>

<h1>List of Users</h1>

<table class="table table-bordered">
    <tr class="bg-secondary text-center text-white">
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th></th>
        <th></th>
    </tr>


    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No Users for this app</td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {   
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td class="text-center"><a class="btn btn-sm btn-secondary" asp-action="Edit" asp-area="Admin" asp-route-id="@user.UserId">Edit</a></td>
                <td class="text-center">
                    <a class="btn btn-sm btn-secondary" asp-action="Delete" asp-area="Admin" asp-route-id="@user.UserId">Delete</a>
                </td>
            </tr>
        }
    }
</table>