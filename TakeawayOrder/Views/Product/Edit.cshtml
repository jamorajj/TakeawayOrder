@model Product

@{
    ViewData["Title"] = "Edit Product Information";
}

<div class="card" style="width: 20rem; margin: 0 auto;">
    <div class="card-body pb-0">
        <h5 class="card-title text-center">Edit Product</h5>
    </div>
    <div class="card-body pt-0">
        <form asp-area="" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <input type="hidden" value="@Model.Id" name="Id" />

            <div class="form-group d-grid mt-2">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary mt-2">
                    Back to List
                </a>
            </div>

        </form>
    </div>
</div>


