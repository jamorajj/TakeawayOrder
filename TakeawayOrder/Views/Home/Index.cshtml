@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-between">
    <div>
        <h2>Products</h2>
    </div>
    <form asp-controller="Home" asp-action="Index" method="get">
        <p>
            <input type="text" name="SearchString" />
            <input type="submit" value="Filter" class="btn btn-sm btn-primary" />
            @if (!@ViewBag.hasSearchString)
            {
                <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-secondary">
                    Clear
                </a>
            }
        </p>
    </form>
</div>

@if (@TempData["flash"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["flash"]
    </div>
}

<table class="table table-bordered">
    <tr class="bg-secondary text-center text-white">
        <th>Product Name</th>
        <th>Price</th>
        @if (@ViewBag.Role == "Admin" || @ViewBag.Role == "Staff")
        {
            <th></th>
            <th></th>
        } else
        {
            <th>Quantity</th>
            <th></th>
        }

    </tr>

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No Products found</td>
        </tr>
    }
    else
    {
        foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                @if (@ViewBag.Role == "Admin" || @ViewBag.Role == "Staff")
                {
                    <td>edit btn</td>
                    <td>delete btn</td>
                }
                else
                {
                    <td class="d-flex justify-content-center">
                        @{
                            string selectId = "quantity" + @product.Id;
                        }
                        <select id="@selectId" style="max-width: 100px;" class="form-select">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                        </select>
                    </td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-primary" onclick="addToCart(@product.Id)">
                            Add to Cart
                        </button>
                    </td>
                }
                
            </tr>
        }
    }
</table>

<script>
    function addToCart(id) {
        const quantity = document.getElementById('quantity' + id).value;
        console.log(id, quantity);
        window.location.replace(`/Home/AddToOrder?id=${id}&quantity=${quantity}`);
    }
</script>